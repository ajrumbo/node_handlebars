<h1>Editar Producto - {{producto.nombre}}</h1>
{{>alerta}}

<form action="/mysql/productos/editar/{{producto.id}}" method="post">
    <div class="row">
        <div class="form-group izquierda">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Nombre" class="form-control" value="{{producto.nombre}}">
        </div>
    </div>
    <div class="row">
        <div class="form-group izquierda">
            <label for="idCategoria">Categoría</label>
            <select name="idCategoria" id="idCategoria" class="form-control">
                {{#each categoria}}
                    <option value="{{this.id}}" {{selected ../categoriaProducto this.id}} >{{this.nombre}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="row">
        <div class="form-group izquierda">
            <label for="precio">Precio</label>
            <input type="number" name="precio" id="precio" placeholder="Precio" class="form-control" value="{{producto.precio}}">
        </div>
    </div>
    <div class="row">
        <div class="form-group izquierda">
            <label for="descripcion">Descripción</label>
            <textarea name="descripcion" id="descripcion" placeholder="Descripción" class="form-control">{{producto.descripcion}}</textarea>
        </div>
    </div>
    <hr />
    <input type="hidden" name="_csrf" id="_csrf" value="{{csrfToken}}" />
    <input type="submit" value="Enviar" class="btn btn-primary" />
</form>